.reviews
	padding: 80px 0
	
	.reviews__slider
		padding 15px
		width: calc(100% + 30px);
		margin-left: -15px
	
	.swiper-pagination-bullet
		width: 20px
		height: 20px
		border 3px solid #D1D7DC
		background: transparent
		tr()
	
	.swiper-horizontal > .swiper-pagination-bullets .swiper-pagination-bullet, .swiper-pagination-horizontal.swiper-pagination-bullets .swiper-pagination-bullet
		margin 0 20px
	
	.swiper-pagination-bullet-active
		background: $main
		border-color $main
	
	.swiper-pagination
		position relative
		bottom auto
		margin-top: 40px
	
	&__title
		font-size: 32px
		margin-bottom: 48px
		font-weight: 400
		
		&:after
			content ''
			display block
			width: 80px
			height: 2px
			background: $main
			margin-top: 16px
	
	.swiper-slide
		height auto
	
	&-card
		height 100%
		background: #FAFAFA
		display flex
		flex-direction column
		box-shadow 0 8px 15px rgba(#3B3D48, .1)
		
		&__head
			min-height 120px
			align-items: center;
			display flex
			background: #EEF1F4
		
		&__image
			flex-shrink 0
			width: 120px
			height: 100%
			
			img
				display block
				object-fit cover
				width: 100%
				height: 100%
		
		&__title
			padding: 16px
			font-size: 20px
			font-weight: 500
		
		&__body
			padding: 16px
			display flex
			flex 1
			flex-direction column
			gap 32px
		
		&__text
			font-size: 15px
			line-height: (22 / 15)
			flex 1
		
		&__author
			font-size: 18px
			color #A2B6C8
			
			
